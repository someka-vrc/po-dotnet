{
  "name": "po-dotnet",
  "displayName": "po-dotnet",
  "description": "show .po translation when hover on localize method in .NET project",
  "version": "0.5.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/someka-vrc/po-dotnet.git"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "po-dotnet.createConfig",
        "title": "Create podotnetconfig.json",
        "category": "PO .NET"
      },
      {
        "command": "po-dotnet.openPoEntry",
        "title": "Open PO entry",
        "category": "PO .NET"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "**/podotnetconfig.json",
        "url": "./schemas/podotnetconfig-schema.json"
      },
      {
        "fileMatch": "**/podotnetconfig~.json",
        "url": "./schemas/podotnetconfig-schema.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PO .NET Settings",
      "properties": {
        "poDotnet.config": {
          "description": "Array of configuration objects similar to podotnetconfig.json (folder-scoped settings supported). Each item configures sourceDirs, poDirs and localizeFuncs.",
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "sourceDirs": { "type": "array", "items": { "type": "string" } },
                  "poDirs": { "type": "array", "items": { "type": "string" } },
                  "localizeFuncs": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["sourceDirs", "poDirs", "localizeFuncs"],
                "additionalProperties": false
              }
            },
            {
              "type": "object",
              "properties": {
                "sourceDirs": { "type": "array", "items": { "type": "string" } },
                "poDirs": { "type": "array", "items": { "type": "string" } },
                "localizeFuncs": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["sourceDirs", "poDirs", "localizeFuncs"],
              "additionalProperties": false
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}